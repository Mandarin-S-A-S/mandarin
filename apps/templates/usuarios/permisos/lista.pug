extends ../../generic_auth

- load static

block content_generic_auth

    | {% if options %}

    div(class="m-b-20")
        a(href="{{crear_permiso}}")
            button(type="button",class="btn btn-success") Agregar permiso

    | {% endif %}

    div(class="panel panel-primary")
        div(class="panel-heading")
            h4(class="panel-title") {{ title_panel }}
            div(class="panel-heading-btn")
                a(href="javascript:;",class="btn btn-xs btn-icon btn-circle btn-default",data-click="panel-expand")
                    i(class="fa fa-expand")
                a(href="javascript:;",class="btn btn-xs btn-icon btn-circle btn-success",data-click="panel-reload",id="reload")
                    i(class="fa fa-redo")
                a(href="javascript:;",class="btn btn-xs btn-icon btn-circle btn-warning",data-click="panel-collapse")
                    i(class="fa fa-minus")


        div(class="panel-body")
            table(id="table",class="table table-striped table-bordered",role="grid",aria-describedby="data-table-default_info",style="width:100%")
                thead
                    tr
                        th
                        th Nombre
                        th Codename
                        th Acciones

                tbody
                    tr
                        td
                        td Nombre
                        td Codename
                        td Acciones


block generic_auth_script
    script.
        $(document).ready(function () {
            var table = $('#table').DataTable({
                responsive: true,
                searching: true,
                processing: true,
                serverSide: true,
                order: [[1, "asc"]],
                columnDefs: [{"orderable": false, "targets": [0,3]}],
                ajax: "{{ url_datatable }}",
                language: {
                    url: "//cdn.datatables.net/plug-ins/1.10.8/i18n/Spanish.json"
                },
                drawCallback: function (settings) {
                    $('[data-toggle="tooltip"]').tooltip();
                }
            });

            $("#reload").click(function () {
                table.ajax.reload();
            });

        });
